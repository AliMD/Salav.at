{
  "name": "salavat-pwa",
  "version": "1.4.0",
  "license": "UNLICENSED",
  "scripts": {
    "c": "yarn clean",
    "clean": "del-cli .tsbuildinfo js build server/build",
    "b": "yarn build",
    "f": "yarn format",
    "fl": "yarn format:eslint",
    "fp": "yarn format:prettier",
    "build": "npm-run-all --serial clean build:ts build:polymer build:gulp",
    "build:ts": "tsc --build",
    "build:polymer": "polymer build --auto-base-path",
    "build:gulp": "gulp build",
    "lint": "npm-run-all --sequential lint:*",
    "lint:ts": "eslint **/*.ts",
    "format": "npm-run-all --sequential format:prettier format:eslint",
    "format:eslint": "eslint **/*.ts --fix",
    "format:prettier": "prettier \"**/*.{html,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "s": "yarn serve",
    "serve": "prpl-server --root server/build --host 0.0.0.0 --port 8080",
    "d": "npm-run-all --serial build:ts dev-server",
    "dev-server": "es-dev-server --node-resolve --preserve-symlinks --app-index index.html  --compatibility none --open",
    "w": "yarn watch",
    "watch": "npm-run-all --parallel \"dev-server --watch\" \"build:ts --watch --preserveWatchOutput\"",
    "deploy": "yarn build && ./deploy.sh"
  },
  "dependencies": {
    "@alwatr/logger": "^0.8.0",
    "@material/mwc-button": "^0.15.0",
    "@material/mwc-drawer": "^0.15.0",
    "@material/mwc-icon-button": "^0.15.0",
    "@material/mwc-slider": "^0.14.1",
    "@material/mwc-snackbar": "^0.15.0",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "pwa-helpers": "^0.9.1"
  },
  "devDependencies": {
    "del-cli": "^4.0.1",
    "es-dev-server": "^2.1.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "polymer-cli": "^1.9.11",
    "polyserve": "^0.27.15",
    "prpl-server": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@web/dev-server": "^0.1.33",
    "eslint": "^8.21.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-wc": "^1.3.2",
    "lerna": "^5.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.7.4"
  }
}
